---
interface Props {
  class?: string;
  id?: string;
  background?: 'white' | 'gray' | 'blue';
}

const { 
  class: className = '',
  id,
  background = 'white'
} = Astro.props;

const backgrounds = {
  white: 'bg-white',
  gray: 'bg-ioc-gray-light',
  blue: 'bg-ioc-blue text-white',
};

const classes = `py-16 md:py-24 ${backgrounds[background]} ${className}`;
---

<section class={classes} id={id}>
  <slot />
</section>

