---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Card from '@/components/ui/Card.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import BookingForm from '@/components/ui/islands/BookingForm';
import '@/styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="googlebot" content="noindex, nofollow" />
    <meta name="description" content="Book an appointment at Instant Orthopedic Care. Walk-ins also welcome." />
    <title>Book Appointment - Instant Orthopedic Care</title>
    
    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="https://pub-6e52b1646d124a3f98c52980e22c87e2.r2.dev/favicon/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="https://pub-6e52b1646d124a3f98c52980e22c87e2.r2.dev/favicon/favicon.svg" />
    <link rel="icon" type="image/png" sizes="96x96" href="https://pub-6e52b1646d124a3f98c52980e22c87e2.r2.dev/favicon/favicon-96x96.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="https://pub-6e52b1646d124a3f98c52980e22c87e2.r2.dev/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="https://pub-6e52b1646d124a3f98c52980e22c87e2.r2.dev/favicon/site.webmanifest" />
  </head>
  <body>
    <Header />
    
    <Section background="gray">
      <Container size="md">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-ioc-gray-dark mb-4">Book Your Appointment</h1>
          <p class="text-xl text-ioc-gray">Fill out the form below or walk in during business hours</p>
        </div>

        <Card class="max-w-2xl mx-auto">
          <BookingForm client:load />
        </Card>

        <div class="mt-12 text-center">
          <p class="text-ioc-gray mb-4">Prefer to call? We're here to help.</p>
          <a href="tel:3852752110" class="text-ioc-blue hover:text-ioc-blue-dark font-semibold text-xl mb-2 block">
            (385) 275-2110
          </a>
          <a href="mailto:info@instantorthocare.com" class="text-ioc-blue hover:text-ioc-blue-dark font-semibold text-lg">
            info@instantorthocare.com
          </a>
        </div>
      </Container>
    </Section>

    <Footer />
  </body>
</html>

